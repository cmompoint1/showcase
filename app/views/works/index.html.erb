<h1>Claude's Work</h1>
<div class="row">
  <% @works.each do |work| %>
    <div class="col-md-5">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2><%= work.name %></h2>
          <p><%= work.description %></p>
          <%= link_to 'View Project', work, class: "btn btn-primary" %>
          <br/>
          <div class="btn-group">
            <%= link_to 'Edit', edit_work_path(work) %> |
            <%= link_to 'Delete', work, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    </div>  
  <% end %>
</div>

<%= link_to 'New Work', new_work_path, class: "btn btn-primary" %>
